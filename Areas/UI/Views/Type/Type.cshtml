@model List<CodeWithMe.Models.Program>

<div class="h-100 ">
    
    <div class="row h-100 ml-0 type">
        <div class="col-3  shadow p-3  bg-light rounded text-dark p-4">
            <ul class="nav mynav list-unstyled flex-column p-3 d-flex text-dark w-100 ">
                @foreach (var i in ViewBag.list)
                {
                    <li class="pb-2"><a href="/Type/@ViewBag.lang/@i.Id" class="text-black text-decoration-none">@i.Name</a></li>
                }
            </ul>
        </div>
        <div class="col d-flex flex-column align-content-center flex-wrap overflow-auto box py-5">
            <div class="d-flex flex-column align-content-center type-box flex-wrap gap-4">
               @foreach(var i in Model){
                <div class="individual shadow p-3  bg-light rounded text-dark  d-flex flex-column align-items-center flex-wrap w-100 p-2">
                    <div class="heading d-flex justify-content-between w-100 gap-4">
                        <div class="title">
                        @i.Name
                        </div>
                        <div class="see">
                            <a href="/Type/Prog/@i.Id" class="btn btn-success check">See</a>
                        </div>
                    </div>
                    <div class="description d-flex justify-content-start w-100 desc">
                       @i.Description
                    </div>
                </div>
                }
                                </div>
            </div>
        </div>
     </div>
