@model Languages

<div class="h-100 ">

    <div class="row h-100 ml-0 type">
        <partial name="_AdminLayout.cshtml" />
        <div class="col d-flex flex-column flex-wrap align-content-center  py-5">
            <div class="d-flex justify-content-center"><h1>Add Languages</h1></div>
            <div class="d-flex flex-column p-3 w-75">
                <form method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="All"></div>
                    <div class="mb-3">
                        <label for="langname" class="form-label">Language Name</label>
                        <input name="Name" class="form-control " placeholder="Enter Langauge Name" id="langname" aria-describedby="emailHelp" asp-for="Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label for="langdesc" class="form-label">Language Description</label>
                        <input name="Description" class="form-control " placeholder="Enter Description" id="langdesc" aria-describedby="emailHelp" asp-for="Description">
                        <span asp-validation-for="Description" class="text-danger"></span>

                    </div>

                    <div class="mb-3">
                        <input type="file" name="attachment" class="form-control " id='file' placeholder="Enter Langauge Name" aria-describedby="emailHelp" style="display:none" onchange="showme(this)" asp-for="Attachment">
                        <button class="btn btn-warning check" onclick="upload(event)">Upload</button>
                        @if (String.IsNullOrEmpty(@Model.File))
                        {
                            <img src="~/noimage.png" id="img" class="image-up ml-4" />
                        }
                        else
                        {
                            <img src="/images/@Model.File" id="img" class="image-up ml-4" />

                        }

                    </div>
                    <button type="submit" class="btn btn-primary check">Edit</button>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}